<Window
    x:Class="HMS.DesktopClient.Views.MedicalRecord.MedicalRecordHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Medical Records">
    <Grid Margin="20">
        <ListView x:Name="RecordsListView" ItemsSource="{Binding MedicalRecords}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Id}" Width="50" />
                        <TextBlock Text="{Binding PatientId}" Width="80" />
                        <TextBlock Text="{Binding ProcedureId}" Width="80" />
                        <TextBlock Text="{Binding Diagnosis}" Width="150" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding CreatedAt}" Width="120" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>