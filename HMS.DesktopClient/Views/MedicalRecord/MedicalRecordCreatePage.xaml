<Window
    x:Class="HMS.DesktopClient.Views.MedicalRecord.MedicalRecordCreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create Medical Record">
    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel Spacing="10">
                <ComboBox Header="Department" ItemsSource="{Binding DepartmentsList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDepartment, Mode=TwoWay}"/>
                <ComboBox Header="Doctor" ItemsSource="{Binding DoctorsList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDoctor, Mode=TwoWay}"/>
                <ComboBox Header="Patient" ItemsSource="{Binding PatientsList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"/>
                <ComboBox Header="Procedure" ItemsSource="{Binding ProceduresList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProcedure, Mode=TwoWay}"/>
                <DatePicker Header="Appointment Date" Date="{Binding AppointmentDateOffset, Mode=TwoWay}"/>
                <TextBox Header="Appointment Time" Text="{Binding AppointmentTime, Mode=TwoWay}"/>
                <TextBox Header="Conclusion" Text="{Binding Conclusion, Mode=TwoWay}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>