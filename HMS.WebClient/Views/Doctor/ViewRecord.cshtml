@model HMS.Shared.DTOs.MedicalRecordDto

@{
    ViewData["Title"] = "Medical Record Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="MedicalHistory" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Medical History
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@(Model.CreatedAt?.ToString("MMMM dd, yyyy HH:mm") ?? "No date")</dd>

                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">
                    @(ViewData["PatientName"] ?? "Unknown") 
                    <small class="text-muted">(ID: @Model.PatientId)</small>
                </dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">
                    @(Model.DoctorName ?? "Unknown")
                    <small class="text-muted">
                        (ID: @Model.DoctorId)
                        @if (!string.IsNullOrEmpty(Model.DoctorDepartment))
                        {
                            <span> - @Model.DoctorDepartment Department</span>
                        }
                    </small>
                </dd>

                <dt class="col-sm-3">Procedure</dt>
                <dd class="col-sm-9">
                    @(Model.ProcedureName ?? "Unknown")
                    <small class="text-muted">
                        (ID: @Model.ProcedureId)
                        @if (!string.IsNullOrEmpty(Model.ProcedureDepartment))
                        {
                            <span> - @Model.ProcedureDepartment Department</span>
                        }
                    </small>
                </dd>

                <dt class="col-sm-3">Diagnosis</dt>
                <dd class="col-sm-9">
                    @if (string.IsNullOrEmpty(Model.Diagnosis))
                    {
                        <span class="text-muted">No diagnosis recorded</span>
                    }
                    else
                    {
                        @Model.Diagnosis
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 