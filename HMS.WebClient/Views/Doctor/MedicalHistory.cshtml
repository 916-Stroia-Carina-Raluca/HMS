@model HMS.WebClient.ViewModels.DoctorMedicalHistoryViewModel

@{
    ViewData["Title"] = "Medical History";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@ViewData["Title"]</h2>
            <p class="text-muted">Dr. @Model.DoctorName - @Model.DepartmentName</p>
        </div>
        <a asp-action="Profile" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Profile
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Recent Patients Section -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Recent Patients
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.RecentPatients.Any())
                    {
                        <div class="text-muted">No recent patients.</div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var patient in Model.RecentPatients)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@patient.Name</h6>
                                    <small class="text-muted">
                                        Last Visit: @patient.LastVisit.ToString("MMM dd, yyyy")
                                        <br />
                                        Total Visits: @patient.VisitCount
                                    </small>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments Section -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt"></i> Upcoming Appointments
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.UpcomingAppointments.Any())
                    {
                        <div class="text-muted">No upcoming appointments.</div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var appointment in Model.UpcomingAppointments)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@appointment.PatientName</h6>
                                    <small class="text-muted">
                                        Date: @appointment.Date.ToString("MMM dd, yyyy")
                                        <br />
                                        Time: @appointment.Date.ToString("HH:mm")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Medical Records Section -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-medical"></i> Recent Medical Records
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.MedicalRecords.Any())
                    {
                        <div class="text-muted">No medical records found.</div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var record in Model.MedicalRecords.Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@record.PatientName</h6>
                                            <small class="text-muted">
                                                @record.CreatedAt.ToString("MMM dd, yyyy")
                                                <br />
                                                Procedure: @record.ProcedureName
                                            </small>
                                        </div>
                                        <a asp-action="ViewRecord" asp-route-id="@record.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.MedicalRecords.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <button class="btn btn-link" type="button" data-bs-toggle="modal" data-bs-target="#allRecordsModal">
                                    View All Records
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for All Medical Records -->
@if (Model.MedicalRecords.Any())
{
    <div class="modal fade" id="allRecordsModal" tabindex="-1" aria-labelledby="allRecordsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="allRecordsModalLabel">All Medical Records</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>Procedure</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.MedicalRecords)
                                {
                                    <tr>
                                        <td>@record.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>@record.PatientName</td>
                                        <td>@record.ProcedureName</td>
                                        <td>
                                            <a asp-action="ViewRecord" asp-route-id="@record.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize any Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
} 