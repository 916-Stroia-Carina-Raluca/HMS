@model IEnumerable<HMS.Shared.DTOs.MedicalRecordDto>

@{
    ViewData["Title"] = "Medical History";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No medical records found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient</th>
                                <th>Procedure</th>
                                <th>Diagnosis</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.OrderByDescending(r => r.CreatedAt))
                            {
                                <tr>
                                    <td>@record.PatientId</td>
                                    <td>@record.ProcedureId</td>
                                    <td>@record.Diagnosis</td>
                                    <td>
                                        <a asp-action="ViewRecord" asp-route-id="@record.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="mt-4">
                <a asp-action="Profile" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 